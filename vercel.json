{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/**/*.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/index.php" },
    { "src": "/(.*)",       "dest": "frontend/dist/$1" }
  ]
}
